{
  "name": "@wc-tools/webrun",
  "version": "1.0.0",
  "type": "module",
  "description": "A web component testing runtime for Playwright",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "lint": "oxlint src test",
    "format": "oxlint --fix src test",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "playwright",
    "testing",
    "web-components",
    "component-testing"
  ],
  "author": "wc-tools",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wc-tools/webrun.git"
  },
  "homepage": "https://github.com/wc-tools/webrun#readme",
  "bugs": {
    "url": "https://github.com/wc-tools/webrun/issues"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@lit-labs/ssr": "^4.0.0",
    "@stencil/core": "^4.42.0",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "1.58.2",
    "@stencil/ssr": "^0.3.0",
    "@types/node": "24.10.9",
    "oxlint": "^1.43.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  }
}
